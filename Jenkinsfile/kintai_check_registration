def shResult() {
    script {
        sh script:'python3 scripts/kintai_check_registration.py', returnStdout: true
    }
}

pipeline {
  agent any

  stages {
    stage('勤怠申請完了確認') {
      steps {
              script {
                result = shResult()
              }
      }
    }
  } 
  
  post {
        success {
            slackSend  channel: "#glb-app-mgr-notification", teamDomain: "all-apc", tokenCredentialId: "slack_webhook_token_mgr", color: 'good', message: "Success: 勤怠申請完了JOB \n ${result}"
        }
        failure {
            slackSend  channel: "#glb-app-mgr-notification", teamDomain: "all-apc", tokenCredentialId: "slack_webhook_token_mgr", color: 'danger', message: "Failed: 勤怠申請完了JOB \n ${result}"
        }
  }
}