def shResult() {
    script {
        sh script:'python3 scripts/kintai_check_over_45_hours.py', returnStdout: true
    }
}

pipeline {
  agent any

  stages {
    stage('テスト実行') {
    //   steps {
    //           //sh 'python3 scripts/kintai_check_over_45_hours.py' 
    //           shResult()
    //   }

      post {
        success {
            slackSend  channel: "#glb-app-mgr-notification", teamDomain: "all-apc", tokenCredentialId: "slack_webhook_token_mgr", color: 'good', message: "Success: ${shResult()}"
        }
        failure {
            slackSend  channel: "#glb-app-mgr-notification", teamDomain: "all-apc", tokenCredentialId: "slack_webhook_token_mgr", color: 'danger', message: "Failed: ${shResult()}"
        }
      }
    }
  } 
}


def custom_msg()
{
  def JENKINS_URL= "localhost:8080"
  def JOB_NAME = env.JOB_NAME
  def BUILD_ID= env.BUILD_ID
  def JENKINS_LOG= " FAILED: Job [${env.JOB_NAME}] Logs path: ${JENKINS_URL}/job/${JOB_NAME}/${BUILD_ID}/consoleText"
  return JENKINS_LOG
}